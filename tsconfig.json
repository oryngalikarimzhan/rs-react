{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext", "dom.iterable"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": "src",
    "paths": {
      "assets": ["assets/index"],
      "components/ui": ["components/ui/index"],
      "components/shared": ["components/shared/index"],
      "components/layout": ["components/layout/index"],
      "contexts": ["contexts/index"],
      "data": ["data/index"],
      "hooks": ["hooks/index"],
      "layout": ["layout/*"],
      "models": ["models/index"],
      "pages": ["pages/index"],
      "utils/helpers": ["utils/helpers/index"],
      "utils/constants": ["utils/constants/index"],
      "utils/types": ["utils/types/index"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "allowUnknownClassnames": true
        }
      }
    ]
  },
  "include": ["src"]
}
